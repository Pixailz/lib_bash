# BASE

## DEBUG MODE
[ "${DEBUG}" == 1 ] && set -x
## STRICT MODE
### Exit on non zero return code
set -e
### Unknown Var
set -u
### if a command in a pipe failed
set -o pipefail
### Setting IFS (Internal Field Separator), disable considering word separated by space
IFS=$'\n\t'

## DIR
DIR_BASE=${PWD}
DIR_INC=${DIR_BASE}/inc
DIR_SRC=${DIR_BASE}/src
DIR_TMP=${DIR_BASE}/.tmp

## OTHER
SCRIPT_NAME=${BASH_SOURCE[1]}
NO_COLOR=1

## INCLUDE
source ${DIR_INC}/base

## LOG
LOG_FILE="${DIR_BASE}/exec.log"
LOG_TITLE_LENGTH=80
LOG_TITLE_COLOR=${G}
#LOG_OFFSET_STR="___"
#LOG_OFFSET_STR="..."
#LOG_OFFSET_STR="   "
#LOG_OFFSET_STR="[+]"
#LOG_OFFSET_STR=" + "
LOG_OFFSET_STR="   "

