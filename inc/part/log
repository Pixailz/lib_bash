LOG_TITLE_LENGTH=$(tput cols)
#LOG_PAD_STR="___"
#LOG_PAD_STR="..."
#LOG_PAD_STR="   "
#LOG_PAD_STR="[+]"
#LOG_PAD_STR=" + "
LOG_PAD_STR="   "

source ${DIR_SRC}/log
