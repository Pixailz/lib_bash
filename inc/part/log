#!/bin/bash

: "
${DIR_INC}/part/log
	log include file, those include:
		- ${DIR_SRC}/log
depend on:
		- ${DIR_INC}/base
"

[ "${INC_PROT_LOG:-0}" == 1 ] && return || INC_PROT_LOG=1

