#!/bin/bash

## ⚠️ TEST ZONE ⚠️

function	tui::reset()
{
	stty "${TUI_OLD_TERM}"
	trap - SIGINT exit
	return
}

function	tui::init()
{
	declare -g	TUI_CUR_TERM=$(tty)
	declare -g	TUI_OLD_TERM=$(stty -g)
	declare -g	TUI_COL=$(tput cols)
	declare -g	TUI_ROW=$(tput lines)

	stty -icanon -echo
	trap "tui::reset" SIGINT exit
}

function	create::task()
{
	true
}

function	test::entry()
{
	tui::init
	printf "test\n" &
	printf "test\n" &
	tui::reset
}

## ⚠️ END TEST ZONE ⚠️

source ./.config
parse::entry ${@}
test::entry
