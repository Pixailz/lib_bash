#!/bin/bash

function	template::pass()
{
	: "
	INFO
		LIB				template
		FUNCTION		pass
		DESC			print pass or fail according to MODE, then print MSG
		ARGS			[1] MSG=${1}
						[2] MODE=${2:-1}
							> maybe 0 to fail or 1 to pass, default to 1
		RETURN_VALUE	STATUS
							> if failed set STATUS to FAILED
	"
	local	MSG="${1}"
	local	MODE="${2:-1}"
	local	SUFFIX

	if [ ${MODE} == 0 ]; then
		printf "[FAIL] %b\n" "${MSG}"
		STATUS="FAILED"
	else
		printf "[PASS] %b\n" "${MSG}"
	fi
}

template::pass "this is a test"
